{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Gcore Docs",
  "colors": {
    "primary": "#ff4c00",
    "light": "#ff4c00",
    "dark": "#ff4c00"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "group": "IAM",
        "openapi": {
          "source": "openapi/iam-openapi.yaml"
        }
      },
      {
        "tab": "Cloud",
        "openapi": {
          "source": "openapi/cloud-openapi.yaml"
        }
      },
      {
        "tab": "DNS",
        "openapi": {
          "source": "openapi/dns-openapi.yaml"
        }
      }
      
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Gcore Website",
          "href": "https://gcore.com/",
          "icon": "user"
        },
        {
          "anchor": "Gcore Status",
          "href": "https://status.gcore.com/",
          "icon": "waveform"
        }
      ]
    }
  },
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "grid",
    "color": {
      "dark": "#212529"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Us",
        "href": "https://gcore.com/contact-us"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign up for free",
      "href": "https://auth.gcore.com/login/signup?lang=en"
    }
  },
  "footer": {
    "socials": {
      "instagram": "https://www.instagram.com/gcore.official/",
      "youtube": "https://www.youtube.com/@GCoreOfficial",
      "x": "https://x.com/gcore_official",
      "linkedin": "https://www.linkedin.com/company/g-core/"
    }
  }
}
